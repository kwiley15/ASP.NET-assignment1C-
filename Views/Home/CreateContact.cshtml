@model assignment1C_.Models.Contact

<h1>Create New Contact</h1>

<form asp-action="Upsert" method="post">
    <input type="hidden" asp-for="ContactId" />
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category Id</label>
        <input asp-for="CategoryId" class="form-control" type="number" min="1" />
    </div>
    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
