@model IEnumerable<assignment1C_.Models.Manager>

<h2>Contact List</h2>
<a class="btn btn-primary" asp-action="Upsert">Add Contact</a>

@if (Model == null || !Model.Any())
{
    <p>No contacts available.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@contact.ContactId">@contact.FirstName</a></td>
                    <td>@contact.LastName</td>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.Email</td>
                    <td>@contact.CategoryId</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Upsert" asp-route-id="@contact.ContactId">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@contact.ContactId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}